model User {
    id        String  @id @default(cuid())
    firstName String
    lastName  String
    email     String  @unique @db.VarChar(255)
    password  String
    owner     Boolean @default(false)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    sessions Session[]
    roles    UserRole[]
}

model UserRole {
    id String @id @default(cuid())

    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    role   Role   @relation(fields: [roleId], references: [id])
    userId String
    roleId String
}

model Role {
    id         String       @id @default(cuid())
    name String @unique
    color      String
    permissions Permission[]
    userRole   UserRole[]

    createdAt DateTime @default(now())
}

enum Permission {
    CREATE_USER
    DELETE_USER
    EDIT_USER
    UPDATE_USER
    CREATE_PRODUCT
    EDIT_PRODUCT
    DELETE_PRODUCT
}
